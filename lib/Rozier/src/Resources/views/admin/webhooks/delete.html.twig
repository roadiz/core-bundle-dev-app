{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{{ "delete.webhook.%name%"|trans({'%name%': item}) }} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global delete-item">
    <header class="content-header header-document header-document-preview">
        <h1 class="content-title document-delete-title">{{ "delete.webhook.%name%"|trans({'%name%': item}) }}</h1>
        <a class="content-header-nav-back uk-navbar-content"
           href="{{ path('webhooksHomePage') }}"
           title="{% trans %}back_to.webhooks{% endtrans %}"
           data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>
    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, {
            'attr': {
                'class': 'uk-form uk-form-stacked'
            }
        }) }}{{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.delete.webhook{% endtrans %}</legend>
                <a href="{{ path('webhooksHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-trash-mini-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
