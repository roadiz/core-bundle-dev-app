{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {% trans %}add.multiple.tags{% endtrans %}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global">

    <header class="content-header header-tags header-tags-add">
        <h1 class="content-title nodes-list-title">{% trans %}add.multiple.tags{% endtrans %}</h1>
        {% include '@RoadizRozier/tags/navBack.html.twig' with {} only %}
        {% include '@RoadizRozier/tags/navBar.html.twig' with {"tag": tag, "current": 'add-multiple'} only %}
    </header>

    <article class="content content-tags-add">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: 'add-tag-form'}}) }}
        {{ form_widget(form) }}
        <fieldset data-uk-margin>
            <button data-action-save="#add-tag-form"
                    class="uk-button uk-button-primary "
                    type="submit"><i class="uk-icon-rz-plus"></i> {% trans %}add_all{% endtrans %}</button>
        </fieldset>
        {{ form_end(form) }}
    </article>

    {% include '@RoadizRozier/tags/actionsMenu.html.twig' %}
</section>
{% endblock %}
