{% extends '@RoadizRozier/simple.html.twig' %}

{% block content %}
<section id="login">
    <div class="login-inner{% if error or (form and not form.vars.valid) %} uk-animation-shake{% endif %}">
        <div id="login-infos">
            {# Make this block overidable from themes. #}
            {% include '@RoadizRozier/admin/blocks/loginImage.html.twig' %}
            <div id="login-credit">
                <i class="uk-icon-rz-roadiz-icon"></i>
                <span id="login-version">{{ cms_prefix }} {{ cms_version }}</span>
            </div>
        </div>
        <div id="login-form-global">
            {% block login_wrapper %}
                <h1 id="tag-title">{% block login_title %}{% trans %}back_office{% endtrans %}{% endblock %}</h1>
                {% block login_content %}{% endblock %}
                {% block login_footer %}
                    <div id="login-link">
                        {% if not hide_website %}
                            {% set publicUrl = '/' %}
                            {% if app.request.basePath %}
                                {% set publicUrl = app.request.basePath %}
                            {% endif %}
                            {% if custom_public_scheme %}
                                {% set publicUrl = custom_public_scheme %}
                            {% endif %}
                            <a title="{% trans %}see.website{% endtrans %}"
                               target="_blank"
                               href="{{ publicUrl }}"
                               class="rz-button rz-button--tertiary rz-button--md">
                                <span class="rz-button__label">{% trans %}view.site{% endtrans %}</span>
                                <span class="rz-button__icon rz-icon-ri--earth-line"></span>
                            </a>
                        {% endif %}
                        {% block login_links %}
                            <a href="{{ path('loginRequestPage') }}" class="rz-button rz-button--tertiary rz-button--md">
                                <span class="rz-button__label">{% trans %}forgot.password{% endtrans %}</span>
                            </a>
                        {% endblock %}
                    </div>
                {% endblock %}
            {% endblock %}
        </div>
    </div>
</section>
{% endblock %}
