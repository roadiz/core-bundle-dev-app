{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{ "delete.setting.%name%"|trans({'%name%': setting.getName })|u.truncate(25, '[…]', true) }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global">

    <header class="content-header header-setting header-setting-delete">
       <h1 class="content-title setting-delete-title">{{ "delete.setting.%name%"|trans({'%name%': setting.getName })|u.truncate(25, '[…]', true) }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        <form class="uk-form uk-form-stacked" action="#" method="post">
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.delete.setting{% endtrans %}</legend>
                <a href="{{ path('settingsHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-trash-o"></i>
                        <span class="label">{% trans %}delete{% endtrans %}</span></button>
            </fieldset>
        </form>
    </article>
</section>
{% endblock %}
