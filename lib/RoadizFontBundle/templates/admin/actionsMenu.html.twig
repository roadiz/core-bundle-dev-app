{% apply spaceless %}
<nav data-action-menu class="actions-menu uk-navbar">
    {% if item.id %}
    <a class="uk-button rz-no-ajax-link" href="{{ path('fontsDownloadPage', { id: item.id }) }}">
        <span class="icon-container"><i class="uk-icon-rz-download"></i></span>
        <span class="label"><span class="label-text">{% trans %}download{% endtrans %}</span></span>
    </a>
    {# Delete current node #}
    <a class="uk-button uk-button-danger" href="{{ path('fontsDeletePage', { id: item.id}) }}">
        <span class="icon-container"><i class="uk-icon-rz-trash-mini-o"></i></span>
        <span class="label"><span class="label-text">{% trans %}delete{% endtrans %}</span></span>
    </a>
    {% endif %}
</nav>
{% endapply %}
