{% if available_translations %}
    <nav class="translation-bar uk-navbar">
        {% if not route %}
            {% set route = 'nodesEditSourcePage' %}
        {% endif %}
        <ul class="uk-navbar-nav">
            {%- for translation in available_translations -%}
                <li class="uk-navbar-item{% if current == translation.getId %} uk-active{% endif %}">
                    <a class="uk-navbar-link"
                       href="{{ path(route, { nodeId: node.getId, translationId:translation.getId }) }}">{{- translation.preferredLocale -}}</a>
                </li>
            {%- endfor -%}
            <li class="uk-navbar-item">
                <a class="uk-navbar-link"
                   href="{{ path('nodesTranslatePage', { nodeId: node.getId }) }}"
                   title="{% trans %}translate.node{% endtrans %}"
                   data-uk-tooltip="{animation:true}"><i class="uk-icon uk-icon-rz-plus"></i></a>
            </li>
        </ul>
    </nav>
{% endif %}
