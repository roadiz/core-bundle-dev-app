{% if head.mainColor %}
#user-panel #company {
    background-color: {{ head.mainColor|raw }};
}
#user-panel .uk-icon-button.uk-icon-rz-turn-off{
    border-color: {{ head.mainColor|raw }};
}
.uk-icon-button:hover, .uk-icon-button:focus{
    border-color: {{ head.mainColor|raw }};
}
.documents-list .document-border{
    background-color: {{ head.mainColor|raw }};
}
.documents-widget-sortable-list-item .document-border, .documents-widget-dragging .document-border{
    background-color: {{ head.mainColor|raw }};
}
.documents-widget-sortable-list-item .preview-zoom, .documents-widget-dragging .preview-zoom {
    background: {{ head.mainColor|raw }};
}
.uk-datepicker-table a.uk-active {
    background: {{ head.mainColor|raw }};
}
.node-widget-explorer .node-widget-explorer-nextpage i{
    color: {{ head.mainColor|raw }};
}
.content-table thead th a.active {
    color: {{ head.mainColor|raw }};
}
{% endif %}

{% for type in nodeTypes %}
/*
 * Custom color on node tree
 * for {{ type.name }}
 */
.nodetree-element.{{ type.name|lower }} > .uk-nestable-panel > .non-nestable-handle:before,
.nodetree-element.{{ type.name|lower }} > .uk-nestable-panel > .uk-nestable-handle:before {
    border-color: {{ type.color|raw }};
}
.nodetree-element.{{ type.name|lower }} > .nodetree-list-item-color {
    background-color: {{ type.color|raw }};
}
.nodetree-element.{{ type.name|lower }} > .uk-nestable-panel > .tree-contextualmenu .vertical-nodetype {
    background-color: {{ type.color|raw }};
}
{% endfor %}
{% for tag in tags %}
/*
 * Custom color on tag
 * for {{ tag.tagName }}
 */
.tag-item[data-tag-id="{{ tag.id }}"] i,
.tagtree-element[data-tag-id="{{ tag.id }}"] > .uk-nestable-panel .uk-nestable-handle i {
    color: {{ tag.color|raw }};
}
{% endfor %}
{% for folder in folders %}
/*
 * Custom color on folder
 * for {{ folder.folderName }}
 */
.folder-item[data-folder-id="{{ folder.id }}"] i,
.foldertree-element[data-folder-id="{{ folder.id }}"] > .uk-nestable-panel .uk-nestable-handle i {
    color: {{ folder.color|raw }};
}
{% endfor %}
