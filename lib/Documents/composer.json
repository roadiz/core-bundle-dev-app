{
    "name": "roadiz/documents",
    "description": "Roadiz sub-package for Document system.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "roadiz",
        "cms",
        "backoffice",
        "rezo zero"
    ],
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@roadiz.io",
            "homepage": "https://www.roadiz.io",
            "role": "Lead developer"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-dom": "*",
        "ext-zip": "*",
        "ext-simplexml": "*",
        "ext-fileinfo": "*",
        "doctrine/orm": "~2.20.0",
        "enshrined/svg-sanitize": "^0.22",
        "intervention/image": "^3.11",
        "league/flysystem": "^3.0",
        "monolog/monolog": "^3.9",
        "symfony/asset": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/event-dispatcher": "7.3.*",
        "symfony/filesystem": ">=7.1",
        "symfony/finder": "7.3.*",
        "symfony/http-foundation": "7.3.*",
        "symfony/http-client-contracts": "^3.5",
        "symfony/options-resolver": "7.3.*",
        "symfony/serializer": "7.3.*",
        "twig/twig": "^3.21"
    },
    "require-dev": {
        "api-platform/metadata": "^4.1.18",
        "doctrine/doctrine-bundle": "^2.8.1",
        "php-coveralls/php-coveralls": "^2.4",
        "phpstan/phpstan": "^1.5.3",
        "phpstan/phpdoc-parser": "<2",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpunit/phpunit": "^9.6",
        "symfony/http-client": "7.3.*",
        "symfony/process": "7.3.*"
    },
    "autoload": {
        "psr-4": {
            "RZ\\Roadiz\\Documents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RZ\\Roadiz\\Documents\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.6.x-dev",
            "dev-develop": "2.7.x-dev"
        }
    }
}
