{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{{ "delete.customFormAnswer.%name%"|trans({'%name%': customForm.getDisplayName})|u.truncate(25, '[…]', true) }} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global">

    <header class="content-header header-node-types header-node-types-delete">
        <h1 class="content-title node-delete-title">{{ "delete.customFormAnswer.%name%"|trans({'%name%': customForm.getDisplayName})|u.truncate(25, '[…]', true) }}</h1>
    </header>

    <article class="content content-delete content-node-types-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.delete.customFormAnswer{% endtrans %}</legend>
                <a href="{{ path('customFormAnswersHomePage', {customFormId: customFormAnswer.customForm.getId}) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-trash-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>

</section>
{% endblock %}
