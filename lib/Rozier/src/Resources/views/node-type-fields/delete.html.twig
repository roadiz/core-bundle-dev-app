{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{{ "delete.nodeTypeField.%name%"|trans({'%name%': field.getLabel})|u.truncate(25, '[…]', true) }} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global">
    <header class="content-header header-node-types header-node-type-fields-delete">
        <h1 class="content-title node-delete-title">{{ "delete.nodeTypeField.%name%"|trans({'%name%': field.getLabel})|u.truncate(25, '[…]', true) }}</h1>
    </header>

    <article class="content content-delete content-node-type-fields-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, {
            'attr': {
                'class': 'uk-form uk-form-stacked'
            }
        }) }}{{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}arz_you_sure.delete.nodeTypeField{% endtrans %}</legend>
                <a href="{{ path('nodeTypeFieldsListPage', { nodeTypeId: field.getNodeType.getId }) }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-trash-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
