{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{{ "delete.document.%name%"|trans({'%name%': document.getFilename})|u.truncate(25, '[…]', true) }} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global delete-document">
    <header class="content-header header-document header-document-preview">
        <h1 class="content-title document-delete-title">{{ "delete.document.%name%"|trans({'%name%': document.getFilename})|u.truncate(25, '[…]', true) }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, {
            'attr': {
                'class': 'uk-form uk-form-stacked'
            }
        }) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger"><i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.delete.document{% endtrans %}</legend>
                <a href="{{ path('documentsHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-trash-mini-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
