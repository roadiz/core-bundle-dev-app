{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{% trans %}import.group{% endtrans %} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global import-group">

    <header class="content-header header-group header-group-import">
        <h1 class="content-title group-import-title">{% trans %}import.group{% endtrans %}</h1>
        <a class="content-header-nav-back uk-navbar-content"
           href="{{ path('groupsHomePage') }}"
           title="{% trans %}back_to.groups{% endtrans %}"
           data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>

    <article class="content content-import">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: "import-group-form" }}) }}
            {{ form_widget(form) }}
            <button type="submit" class="uk-button uk-button-primary"><i class="uk-icon-rz-upload"></i> {% trans %}import{% endtrans %}</button>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
