{% extends '@RoadizRozier/layout.html.twig' %}

{% block title %}{% trans %}add.a.folder{% endtrans %} | {{ parent() }}{% endblock %}

{% block content %}
<section class="content-global add-folder">

    <header class="content-header header-folder header-folder-add">
        <h1 class="content-title folder-add-title">{% trans %}add.a.folder{% endtrans %}</h1>
        <a class="content-header-nav-back uk-navbar-content" href="{{ path('foldersHomePage') }}" title="{% trans %}back_to.folders{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </a>
    </header>

    <article class="content content-add">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: "add-folder-form"}}) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <button is="rz-save-button" data-action-save="#add-folder-form" class="uk-button uk-button-success" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                    <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                </button>
            </fieldset>
        {{ form_end(form) }}
    </article>

    {% include '@RoadizRozier/folders/actionsMenu.html.twig' with {"folder": folder} only %}
</section>
{% endblock %}
