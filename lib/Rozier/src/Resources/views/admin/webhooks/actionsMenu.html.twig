{% apply spaceless %}
<nav data-action-menu class="actions-menu uk-navbar">
    {% if item.id %}
        {% if is_granted('ROLE_ACCESS_WEBHOOKS') %}
            <a class="uk-button uk-button-danger" href="{{ path('webhooksDeletePage', { id: item.id}) }}">
                <span class="icon-container"><i class="uk-icon-rz-trash-mini-o"></i></span>
                <span class="label"><span class="label-text">{% trans %}delete{% endtrans %}</span></span>
            </a>
            <a class="uk-button"
               href="{{ path('webhooksTriggerPage', { id: item.id }) }}">
                <span class="icon-container"><i class="uk-icon-space-shuttle"></i></span>
                <span class="label"><span class="label-text">{% trans %}webhook.trigger{% endtrans %}</span></span>
            </a>
        {% endif %}
    {% endif %}
</nav>
{% endapply %}
