{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{ "delete.redirection"|trans }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global">
    <header class="content-header header-redirection header-redirection-add">
        <h1 class="content-title">{{ "delete.redirection"|trans }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend class="uk-alert uk-alert-danger">
                    <i class="uk-icon uk-icon-warning"></i> {% trans %}are_you_sure.delete.redirection{% endtrans %}
                </legend>
                <a href="{{ path('redirectionsHomePage') }}"
                   class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger"
                        type="submit"><i class="uk-icon-trash-o"></i> {% trans %}delete{% endtrans %}</button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
