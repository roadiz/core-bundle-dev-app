{
    "name": "roadiz/documents",
    "description": "Roadiz sub-package for Document system.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "roadiz",
        "cms",
        "backoffice",
        "rezo zero"
    ],
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@roadiz.io",
            "homepage": "https://www.roadiz.io",
            "role": "Lead developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-dom": "*",
        "ext-zip": "*",
        "ext-simplexml": "*",
        "ext-fileinfo": "*",
        "doctrine/orm": "~2.19.0",
        "enshrined/svg-sanitize": "^0.15",
        "guzzlehttp/guzzle": "^7.2.0",
        "guzzlehttp/psr7": "^2.0",
        "intervention/image": "^2.5",
        "league/flysystem": "^3.0",
        "monolog/monolog": "^1.24.0 || ^2.1.1",
        "symfony/asset": "6.4.*",
        "symfony/console": "6.4.*",
        "symfony/event-dispatcher": "6.4.*",
        "symfony/filesystem": "6.4.*",
        "symfony/finder": "6.4.*",
        "symfony/http-foundation": "6.4.*",
        "symfony/options-resolver": "6.4.*",
        "symfony/serializer": "6.4.*",
        "twig/twig": "^3.1"
    },
    "require-dev": {
        "api-platform/metadata": "^3.2.12",
        "doctrine/doctrine-bundle": "^2.8.1",
        "php-coveralls/php-coveralls": "^2.4",
        "phpstan/phpstan": "^1.5.3",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "RZ\\Roadiz\\Documents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RZ\\Roadiz\\Documents\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev",
            "dev-develop": "2.4.x-dev"
        }
    }
}
