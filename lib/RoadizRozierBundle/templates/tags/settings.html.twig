{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{ "edit.tag.%name%.settings"|trans({'%name%': tag.getTagName }) }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global">

    <header class="content-header header-tags header-tags-settings">
        <h1 class="content-title tags-settings-title">{{ "edit.tag.%name%.settings"|trans({'%name%': tag.getTagName }) }}</h1>
        {% include '@RoadizRozier/tags/navBack.html.twig' with {} only %}
        {% include '@RoadizRozier/tags/navBar.html.twig' with {"tag": tag, "current": 'settings'} only %}
    </header>

    <article class="content content-tags-settings">
        {% form_theme form '@RoadizRozier/forms.html.twig' %}
        {{ form_start(form, { attr: {id: 'edit-tag-form'}}) }}
        {{ form_widget(form) }}
        <fieldset data-uk-margin>
            <button is="rz-save-button" data-action-save="#edit-tag-form" class="uk-button uk-button-success" type="submit">
                <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
            </button>
        </fieldset>
        {{ form_end(form) }}

        <div class="content-table-cont metadata-list">
            <table class="uk-table content-table">
                <tr>
                    <th>{% trans %}created.at{% endtrans %}</th>
                    <td>{{ tag.createdAt|format_datetime('long', locale=app.request.locale) }}</td>
                </tr>
                <tr>
                    <th>{% trans %}updated.at{% endtrans %}</th>
                    <td>{{ tag.updatedAt|format_datetime('long', locale=app.request.locale) }}</td>
                </tr>
                <tr>
                    <th>{% trans %}position{% endtrans %}</th>
                    <td>{{ tag.position }}</td>
                </tr>
            </table>
        </div>
    </article>
    {% include '@RoadizRozier/tags/actionsMenu.html.twig' %}

</section>
{% endblock %}
