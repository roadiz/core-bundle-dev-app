{% apply spaceless %}
    <nav data-action-menu class="actions-menu uk-navbar">
        {# Delete current node #}
        {% if (is_granted('ROLE_ACCESS_NODETYPES_DELETE')) %}
            {% if nodeType.getId %}
                <a class="uk-button uk-button-danger" href="{{ path('nodeTypesDeletePage', { nodeTypeId: nodeType.getId}) }}">
                    <span class="icon-container"><i class="uk-icon-rz-trash-o"></i></span>
                    <span class="label"><span class="label-text">{% trans %}delete{% endtrans %}</span></span>
                </a>
                <a class="uk-button rz-no-ajax-link" href="{{ path('nodesTypesExportPage', { nodeTypeId: nodeType.getId }) }}">
                    <span class="icon-container"><i class="uk-icon-rz-download"></i></span>
                    <span class="label"><span class="label-text">{% trans %}export{% endtrans %}</span></span>
                </a>
            {% endif %}
        {% endif %}
    </nav>
{% endapply %}
