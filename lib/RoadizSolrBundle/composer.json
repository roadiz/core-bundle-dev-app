{
    "name": "roadiz/solr-bundle",
    "license": "MIT",
    "keywords": [
        "cms",
        "backoffice",
        "roadiz",
        "rezo zero"
    ],
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@roadiz.io",
            "homepage": "https://www.roadiz.io",
            "role": "Lead developer"
        }
    ],
    "type": "symfony-bundle",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-zip": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "doctrine/orm": "~2.20.0",
        "nelmio/solarium-bundle": "^5.1",
        "roadiz/core-bundle": "2.6.*",
        "roadiz/documents": "2.6.*",
        "solarium/solarium": "^6.3.6",
        "symfony/cache": "7.3.*",
        "symfony/console": "7.3.*",
        "symfony/dotenv": "7.3.*",
        "symfony/flex": "^2.4.7",
        "symfony/framework-bundle": "7.3.*",
        "symfony/messenger": "7.3.*",
        "symfony/serializer": "7.3.*",
        "symfony/string": "7.3.*",
        "symfony/workflow": "7.3.*"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.4",
        "phpstan/phpstan": "^1.5.3",
        "phpstan/phpdoc-parser": "<2",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpunit/phpunit": "^9.6",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/stopwatch": "7.3.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": false,
            "symfony/runtime": false,
            "php-http/discovery": false
        }
    },
    "autoload": {
        "psr-4": {
            "RZ\\Roadiz\\SolrBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RZ\\Roadiz\\SolrBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.6.x-dev",
            "dev-develop": "2.7.x-dev"
        }
    }
}
