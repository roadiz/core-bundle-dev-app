{% extends '@RoadizRozier/layout.html.twig' %}

{%- block title -%}
    {{ "tag.%name%.tree"|trans({'%name%': tag.getTagName })|u.truncate(25, '[…]', true) }}
    |
    {{ parent() -}}
{%- endblock -%}

{% block content %}
<section class="content-global">

    <header class="content-header header-tags header-tags-tree">
        <h1 class="content-title tags-tree-title">{{ "tag.%name%.tree"|trans({'%name%': tag.getTagName })|u.truncate(25, '[…]', true) }}</h1>
        {% include '@RoadizRozier/tags/navBack.html.twig' with {} only %}
        {% include '@RoadizRozier/tags/navBar.html.twig' with {"current": 'tree', "tag":tag} only %}
    </header>

    <article class="content content-tags-tree">
        {% include '@RoadizRozier/widgets/tagTree/tagTree.html.twig' with { "tagTree":specificTagTree, "tag":specificTagTree.getRootTag } only %}
    </article>

    {% include '@RoadizRozier/tags/actionsMenu.html.twig' %}

</section>
{% endblock %}
